<!doctype html>
<div class="projContent content container">
	<div id = "name">
		<h1>{{project}}</h1>
	</div>
	<div id = "description">
		<div class="subtitle">
			<p>{{subtitle}}</p>
		</div>
	</div>
	<div class = "section projSummary row">
		<div class = "col-md-8 col-sm-12">
			<img src="./public/images/{{image}}">
		</div>
		<div class = "col-md-4 col-sm-12">
			<ul>
			{{#each overview}}
				{{#each this}}
					<li><span>{{@key}}</span>{{this}}</li>
				{{/each}}
			{{/each}}
		</ul>
		</div>
			
	</div>
	<div class= "section">
		<div class="subtitle">
			<h3>Problem Space</h3>
		</div>
		<p>{{problem}}</p>
	</div>
	{{#each image-sections}}
	<div class = "section">
		<div class="subtitle">
			<h3>{{title}}</h3>
		</div>
			<div class="baseSection">
				<div class="projText">
					<p>{{blurb}}</p>
					{{#if list}}
					<ul>
						{{#each list}}
						<li>{{this}}</li>
						{{/each}}
					</ul>
					{{/if}}
				</div>
				<div class="projImage">
					{{#if image}}
					<img src="./public/images/{{image}}" alt="">
					{{/if}}
				</div>
			</div>
			{{{code}}}
			{{#if carousel}}
			<div id="projCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
				<ol class="carousel-indicators">
					{{#each carousel}}
					{{#if @first}}
					<li data-target="#projCarousel" data-slide-to="{{this.id}}" class="active"></li>
					{{else}}
					<li data-target="#projCarousel" data-slide-to="{{this.id}}"></li>
					{{/if}}
					{{/each}}
				</ol>
				<div class="carousel-inner">
					{{#each carousel}}
					{{#if @first}}
					<div class = "carousel-item active" id="{{this.id}}">
						<img class= "d-block w-100" src="./public/images/{{this.link}}">
					{{/if}}
					{{else}}
					<div class = "carousel-item" id="{{this.id}}">
						<img class= "d-block w-100" src="./public/images/{{this.link}}">
					</div>

					{{/each}}
				</div>
			    <a class="carousel-control-prev" href="#projCarousel" role="button" data-slide="prev">
			    	<div>
					    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
					      <span class="sr-only">Previous</span>
					  </div>
			    </a>
			    <a class="carousel-control-next" href="#projCarousel" role="button" data-slide="next">
			      <div>
			      	<span class="carousel-control-next-icon" aria-hidden="true"></span>
			      	<span class="sr-only">Next</span>
			      </div>
			    </a>	
			</div>
			{{/if}}
		</div>
		{{/each}}
	</div>
	<div class = "about me">
	</div>
</div>
