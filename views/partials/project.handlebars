<!doctype html>

<div class="projContent content container">
	<div id = "name">
		<h1>{{project}}</h1>
	</div>
	<div id = "description">
		<div class="subtitle">
			<p>{{subtitle}}</p>
		</div>
	</div>
	<div class="summary">
		<div class = "section projSummary row">
			<div class = "col-lg-7 col-md-5 col-sm-12">
				<img src="./public/images/{{image}}">
			</div>
			<div class = "col-lg-5 col-md-7 col-sm-12">
				<ul>
				{{#each overview}}
					{{#each this}}
						<li><span>{{@key}}</span>{{this}}</li>
					{{/each}}
				{{/each}}
			</ul>
			</div>
				
		</div>
		<div class="projText">
			{{#each problem}}
			<div class="catTitle">
				<h1>{{@key}}</h1>
			</div>
			<p>{{this}}</p>
			{{/each}}
		</div>
	</div>
	{{#each category}}
	{{#each image-sections}}
	<div class = "section">
		{{#if logo}}
		<div class="catTitle">
			{{#if @first}}
			<h1> {{../title}}</h1>
			{{/if}}
		</div>
		<div class="row">
			<div class="projText col-md-12">
				<div class="catTitle">
					<h2>{{title}}</h2>
				</div>
				<p>{{blurb}}</p>
			</div>
		</div>
		{{else}}
		<div class="baseSection">
			<div class="projText">
				<div class="catTitle">
					{{#if @first}}
					<h1> {{../title}}</h1>
					{{/if}}
					<h2>{{title}}</h2>
				</div>
				<p>{{blurb}}</p>
				{{#if list}}
				<ol>
					{{#each list}}
					<li>{{this}}</li>
					{{/each}}
				<ol>
				{{/if}}
				{{#if listPair}}
				<ol class = "listPair">
					{{#each listPair}}
					{{#each this}}
					<li><span>{{@key}}</span><br>{{this}}</li>
					{{/each}}
					{{/each}}
				</ol>
				{{/if}}
			</div>
			<div class="projImage ">
				{{#if image}}
				<img src="./public/images/{{image}}" alt="">
				{{/if}}
			</div>
		</div>
		{{/if}}
		{{{code}}}
		{{#if carousel}}
		<div id="projCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
			<ol class="carousel-indicators">
				{{#each carousel}}
				{{#if @first}}
				<li data-target="#projCarousel" data-slide-to="{{this.id}}" class="active"></li>
				{{else}}
				<li data-target="#projCarousel" data-slide-to="{{this.id}}"></li>
				{{/if}}
				{{/each}}
			</ol>
			<div class="carousel-inner">
				{{#each carousel}}
				{{#if @first}}
				<div class = "carousel-item active" id="{{this.id}}">
					<img class= "d-block w-100" src="./public/images/{{this.link}}">
				</div>
				{{else}}
				<div class = "carousel-item" id="{{this.id}}">
					<img class= "d-block w-100" src="./public/images/{{this.link}}">
				</div>
				{{/if}}
				{{/each}}
			</div>
		    <a class="carousel-control-prev" href="#projCarousel" role="button" data-slide="prev">
		    	<div>
				    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
				      <span class="sr-only">Previous</span>
				  </div>
		    </a>
		    <a class="carousel-control-next" href="#projCarousel" role="button" data-slide="next">
		      <div>
		      	<span class="carousel-control-next-icon" aria-hidden="true"></span>
		      	<span class="sr-only">Next</span>
		      </div>
		    </a>	
		</div>
		{{/if}}
	</div>
	{{/each}}
	{{/each}}
</div>

